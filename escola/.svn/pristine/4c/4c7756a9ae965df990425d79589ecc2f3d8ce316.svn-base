<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>    
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<title>Sala - Lista de Alunos</title>
</head>
<body>
	<h1>Lista de Alunos da Sala ${sala.id}</h1>
	<h2>Capacidade: ${sala.capacidade}</h2>
<%-- 	<h2>Alunos na Sala: ${alunos.size}</h2> --%>	
	
	<table width="100%" border="1">
		<tr>
			<th>Matrícula</th>
			<th>nome</th>
		</tr>
		
		<tr>
			<c:forEach items="${alunos}" var="aluno">
				<c:if test="${empty alunos}">
					<td>Nenhum aluno nessa sala!</td>
				</c:if>
				<td>${aluno.id}</td>
				<td>${aluno.nome}</td>
				<td><a href="#">Excluir</a></td>
			</c:forEach>
		</tr>
	</table>
	<a href="procurar-alunos-page?numSala=${sala.id}">Adicionar alunos à sala</a>
</body>
</html>